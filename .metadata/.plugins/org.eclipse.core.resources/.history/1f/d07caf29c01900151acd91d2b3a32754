#ifndef MATRIX_H_
#define MATRIX_H_

class Matrix {
private:
	/**
	 * Declare the matrix
	 */
	int** _Matrix;

public:
	Matrix();
	virtual ~Matrix();

	/**
	 * Constrator - Create new Matrix with the specified size
	 */
	Matrix(int xSize, int ySize);

	int get(int x, int y);

	void set(int x, int y, CELL_STATUS status);
};

#endif /* MATRIX_H_ */
