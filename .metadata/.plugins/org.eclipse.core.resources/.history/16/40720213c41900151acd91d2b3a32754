#ifndef MATRIX_H_
#define MATRIX_H_

#include "Utils.h";

class Matrix {
private:
	/**
	 * Declare the matrix
	 */
	int** _matrix;
	int _rows;
	int _columns;

public:
	Matrix();
	virtual ~Matrix();

	/**
	 * Constrator - Create new Matrix with the specified size
	 */
	Matrix(int xSize, int ySize);

	Utils::CELL_STATUS get(int x, int y);

	void set(int x, int y, Utils::CELL_STATUS status);
};

#endif /* MATRIX_H_ */
